body
	width 100%
	height 100%
	background-color #F2E3D1

.main 
	margin-bottom 40px

.wrapper
	width 90%
	margin 0 auto

.search-form
	position relative

.search-form.index
	margin-top 40%

.search-icon
	position absolute
	right 0
	width 40px
	height 40px
	background url(../img/icon-search.png)

.search-bar
	width 100%
	height 40px
	font-size 16px
	-webkit-appearance none
	border 0px solid #000000
	background-color #FAF6F0
	outline none
	padding-left 10px
	border-radius 0
	-webkit-border-radius 0
	-moz-border-radius 0
	-o-border-radius 0
	-ms-border-radius 0

footer
	position fixed
	bottom 0
	width 100%
	background-color #CCA98F

.footer-nav li
	display inline-block
	// margin-left 1px
	width 32%

.footer-nav li:nth-child(2)
	border-left 1px solid #ffffff
	border-right 1px solid #ffffff

.footer-nav li a
	// height 30px
	line-height 40px
	display block
	text-align center
	color #ffffff

.bookname
	color #898989

.bookauthor
	color #E1B28E

// search-book-lists

header.search-list
	padding 10px
	background-color #CCA98F

.s-books-list li a
	display block
	padding 10px
	overflow hidden
	// border-top 1px solid #ffffff
	border-bottom 1px solid #ffffff

.s-books-list li a .bookcover
	width 80px
	float left

.s-books-list li a .bookinfo
	margin 40px 0px 0px 100px 

.s-books-list li a .bookname
	color #898989
	font-size 18px
	font-weight bold

.s-books-list li a .bookauthor
	color #E1B28E
	font-size 14px

// my-read-list
header.read
	height 40px
	background-color #CCA98F
	color #ffffff

header img
	vertical-align middle
	width 40px

.my-read-list li
	display inline-block
	width 49%

.my-read-list li a
	display block
	padding 10px

.my-read-list li a img
	display block
	margin 0 auto

.my-read-list li a .bookcover
	width 100px

.my-read-list li a .bookinfo
	display block
	width 110px
	margin 10px auto 0

.my-read-list li a .bookname
	font-size 14px
	font-weight bold

.my-read-list li a .bookauthor
	font-size 12px

// book page
.main .book-main
	padding 10px

.book-main .bookcover
	width 120px
